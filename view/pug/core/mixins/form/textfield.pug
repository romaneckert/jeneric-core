mixin textfield()

    -
        if(undefined === attributes.name) {
            throw new Error('textfield has no attribute name');
        }

        if(undefined === attributes.form) {
            throw new Error('textfield has no attribute form');
        }

        if(attributes.form && attributes.form.instance && attributes.form.instance[attributes.name]) {
            attributes.value = attributes.form.instance[attributes.name];
        }

        delete attributes.form;

    input&attributes(attributes)
